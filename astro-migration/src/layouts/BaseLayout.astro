---
import BaseHead from '../components/BaseHead.tsx';
import Footer from '../components/Footer.tsx';
import Newsletter from '../components/Newsletter.tsx';
import Header from '../components/Header.tsx';

const {title, description, permalink, canonicalURL, excludeNewsletter } = Astro.props;
---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} canonicalURL={canonicalURL} />
    <link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>
  </head>
  <body>
      <Header />
      <main>
          <slot/>
      </main>

      {!excludeNewsletter && <Newsletter />}
      <Footer />
  </body>
</html>

