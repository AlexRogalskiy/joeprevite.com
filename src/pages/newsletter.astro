---
import BaseLayout from '../layouts/BaseLayout.astro';
import site from '../data/site';
import Newsletter from "../components/Newsletter.tsx"

const title = `${site.name}'s Monthly Newsletter`
const description = `${site.name}'s monthly newsletter which 1 exciting thing, 1 helpful thing, fun internet findings and new jobs.`
const tagline = `The newsletter you need in your inbox`
---
<BaseLayout description={description} canonicalURL={Astro.request.canonicalURL.href} excludeNewsletter tagline={tagline}>
    <h1>{title}</h1>
    <Newsletter />
</BaseLayout>